<div class='container'>

  <div class='home-grid'>

    <% @work_spaces.each do |work_space| %>

    <div class="card">

    <% if work_space.photos.present? %>
      <%= cl_image_tag work_space.photos.first.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <%= image_tag "https://st.depositphotos.com/1008438/1896/i/950/depositphotos_18961721-stock-photo-office-work-place.jpg" %>
    <% end %>

      <div class='card-name'>
        <h2><%=work_space.name %></h2>
      </div>

      <div class='card-details'>
        <p> Description: <%= work_space.description %></p>
      </div>

      <div class='card-price'>
        <p>R$ <%= work_space.price %></p>
      </div>

      <div class='card-host'>
        <p>Host: <%= work_space.user.first_name %></p>
      </div>

      <div class='button'>
        <%= link_to "View more", work_space, class: 'btn btn-dark my-3' %>
      </div>

    </div>
    <%end%>
  </div>

  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

</div>
